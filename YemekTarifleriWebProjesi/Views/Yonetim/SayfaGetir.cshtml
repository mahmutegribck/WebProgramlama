@model YemekTarifleriWebProjesi.Models.Sayfalar

@{
    ViewData["Title"] = "SayfaGetir";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}


<script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>
<h4>Sayfa Güncelle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SayfaGetir">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="SayfaId" />
            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icerik" class="control-label"></label>
                @*<input asp-for="Icerik" class="form-control" />*@
                <textarea asp-for="Icerik" name="editor1"></textarea>
                    <script>
                        CKEDITOR.replace("editor1")
                    </script>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktif" class="control-label"></label>
                @*<input asp-for="Aktif" class="form-control" />*@
                <select asp-for="Aktif" class="form-control">
                    <option value="True">Evet</option>
                    <option value="False">Hayır</option>
                </select>
                <span asp-validation-for="Aktif" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Sayfalar">Geri</a>
</div>

